{
  "name": "@eonian/html-to-image",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build:scss": "sass src/templates:dist/templates --no-source-map",
    "build:ts": "tsc",
    "build:css": "postcss src/**/*.scss --dir dist",
    "_build": "npm run build:ts && npm run build:scss",
    "build:vite": "vite build",
    "build:babel": "babel src --out-dir dist --extensions \".js,.jsx,.ts,.tsx\"",
    "_dev": "vite",
    "_start": "dist/server.js",
    "clean": "rm -rf dist",
    "deploy": "npm run clean && fly deploy",
    "test": "jest",
    "test:update:snapshot": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "test:only": "jest --testPathPattern",
    "test:e2e": "jest --testMatch='**/*.e2e-spec.ts'",
    "test:e2e:only": "npm test:e2e --testPathPattern",
    "postinstall": "npx playwright install chromium",
    "dev": "next dev",
    "build": "next build",
    "start": "next start"
  },
  "dependencies": {
    "@types/showdown": "^2.0.6",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "next": "^15.1.0",
    "playwright": "^1.41.0",
    "postcss": "^8.4.49",
    "postcss-modules": "^6.0.1",
    "postcss-scss": "^4.0.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reflect-metadata": "^0.2.2",
    "showdown": "^2.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@flydotio/dockerfile": "^0.5.8",
    "@jest/globals": "^29.7.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.7.0",
    "@types/react": "^18.2.24",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "postcss-cli": "^11.0.0",
    "sass": "^1.82.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vite": "^6.0.2"
  },
  "dockerfile": {
    "cache": ""
  }
}
