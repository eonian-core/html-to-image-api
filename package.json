{
  "name": "@eonian/html-to-image",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "concurrently -c \"cyan,magenta,green\" \"npm:test:watch\" \"npm:start:watch\"",
    "build": "tsc",
    "build:watch": "tsc -w",
    "start": "ts-node src/index.ts",
    "start:watch": "nodemon --exec ts-node src/index.ts --watch src -e ts,tsx",
    "clean": "rm -rf dist",
    "deploy": "npm run clean && fly deploy",
    "test": "jest",
    "test:update:snapshot": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "test:only": "jest --testPathPattern",
    "test:e2e": "jest --testMatch='**/*.e2e-spec.ts'",
    "test:e2e:only": "npm test:e2e --testPathPattern",
    "postinstall": "npx playwright install chromium"
  },
  "dependencies": {
    "@types/showdown": "^2.0.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "playwright": "^1.41.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "reflect-metadata": "^0.2.2",
    "showdown": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@babel/preset-typescript": "^7.26.0",
    "@flydotio/dockerfile": "^0.5.8",
    "@jest/globals": "^29.7.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.7.0",
    "@types/react": "^18.2.24",
    "@types/react-dom": "^18.3.1",
    "concurrently": "^8.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dockerfile": {
    "cache": ""
  }
}
